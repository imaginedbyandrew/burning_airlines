<% if logged_in? %>
	<div id="app">
		<h1>Burning Airlines</h1>
		<!-- Search -->
		<a href="#/search">Search</a>
		<a href="#/newFlight" id="newFlight">New Flight</a>
		<div id="main">
		</div>

		<script type="templates/handlebars" id="seatsView">
			test
			{{#each row}}
				test
				// <div class="seatRow">
				// {{#each ../columns}}
				// 	<div class="seat"></div>
				// {{/each}}
				// </div>
			{{/each}}
		</script>

		<script type="templates/handlebars" id="searchView">
			<div class="searchView">
				<h2> Search flights </h2>
				To:<input type="text" class="to"></input>
				From:<input type="text" class="from"></input> 
				<button class="subSearch">Search!</button>
				<div class="searches"></div>
			</div>
		</script>

		<script type="templates/handlebars" id="flightList">
			<table>
			  <thead>
			    <tr>
			      <th>Callsign</th>
			      <th>Origin</th>
			      <th>Destination</th>
			    </tr>
			  </thead>
			  <tbody>
			    {{#each flights}}
			    	<tr>
			    		<td><a href="#/flights/{{ id }}">{{ callsign }}</a></td>
			    		<td>{{ origin }}</td>
			    		<td>{{ destination }}</td>
			    	</tr>
			    {{/each}}
			  </tbody>
			</table>
		</script>


		<script type="template/html" id="flightNewView">
			<h2>New Flight</h2>
		
			<%= form_for Flight.new do |f| %>

		  <div class="field">
		    <%= f.label :callsign %><br>
		    <%= f.text_field :callsign %>
		  </div>
		  <div class="field">
		    <%= f.label :origin %><br>
		    <%= f.text_field :origin %>
		  </div>
		  <div class="field">
		    <%= f.label :destination %><br>
		    <%= f.text_field :destination %>
		  </div>
		  <div class="field">
		    <%= f.label :plane_id %><br>
		    <%= f.number_field :plane_id %>
		  </div>
		  <div class="actions">
		    <%= f.submit %>
		  </div>
		<% end %>
		</script>



	</div>




<% else %>
<%= link_to 'Sign up', '/signup' %>
<h1>PLS LOGIN</h1>
<% end %>